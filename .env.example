# =============================================================================
# CONTINUUM - App State Migration Service
# Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# MongoDB Database Configuration
# -----------------------------------------------------------------------------

# MongoDB root credentials (for docker-compose)
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=password

# Application database connection string
# Format: mongodb://username:password@host:port/database
CONTINUUM_DB_CONNECTION_STRING=mongodb://root:password@localhost:27017

# Database name
CONTINUUM_DB_NAME=continuum

# -----------------------------------------------------------------------------
# Event Indexer Configuration
# -----------------------------------------------------------------------------

# Interval between indexing runs (milliseconds)
CONTINUUM_INDEXER_INTERVAL=30000

# Number of blocks to process per batch
CONTINUUM_INDEXER_BLOCK_RANGE=14

# Maximum retry attempts on indexing failure
CONTINUUM_INDEXER_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Aztec Node URLs
# Configure for each network you want to index
# -----------------------------------------------------------------------------

# Devnet Aztec node URL (leave empty if not using devnet)
CONTINUUM_AZTEC_NODE_URL_DEVNET=

# Testnet Aztec node URL (leave empty if not using testnet)
CONTINUUM_AZTEC_NODE_URL_TESTNET=

# Sandbox Aztec node URL (default for local development)
CONTINUUM_AZTEC_NODE_URL_SANDBOX=http://localhost:8080

# -----------------------------------------------------------------------------
# REST API Configuration
# -----------------------------------------------------------------------------

# API server port
CONTINUUM_API_PORT=3000

# API server host
CONTINUUM_API_HOST=0.0.0.0

# CORS origin (use * for all, or specific domain)
CONTINUUM_CORS_ORIGIN=*

# -----------------------------------------------------------------------------
# Artifacts Configuration
# -----------------------------------------------------------------------------

# Path to contract artifacts directory
CONTINUUM_ARTIFACTS_PATH=./artifacts

# -----------------------------------------------------------------------------
# General Configuration
# -----------------------------------------------------------------------------

# Node environment (development, production)
NODE_ENV=production
