# REST API Environment Configuration

# -----------------------------------------------------------------------------
# Database Connection
# -----------------------------------------------------------------------------

# MongoDB connection string
CONTINUUM_DB_CONNECTION_STRING=mongodb://root:password@localhost:27017

# Database name
CONTINUUM_DB_NAME=continuum

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# API server port
CONTINUUM_API_PORT=3004

# API server host
CONTINUUM_API_HOST=0.0.0.0

# CORS origin (use * for all, or specific domain)
CONTINUUM_CORS_ORIGIN=*

# -----------------------------------------------------------------------------
# Artifacts Configuration
# -----------------------------------------------------------------------------

# Path to contract artifacts directory
CONTINUUM_ARTIFACTS_PATH=./artifacts

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------

NODE_ENV=development
